<Application x:Class="Expenses.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vv="clr-namespace:Expenses.WPF.Views"
             xmlns:vm="clr-namespace:Expenses.WPF.ViewModels"
             >
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:AddChargesViewModel}">
            <vv:AddChargesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ChargesViewModel}">
            <vv:ChargesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ChargeViewModel}">
            <vv:ChargeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EditExpenseReportViewModel}">
            <vv:EditExpenseReportView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ExpenseReportChargesViewModel}">
            <vv:ExpenseReportChargesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ExpenseReportsViewModel}">
            <vv:ExpenseReportsView />
        </DataTemplate>
    </Application.Resources>
</Application>
